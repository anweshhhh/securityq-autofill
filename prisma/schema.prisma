generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DocumentStatus {
  UPLOADED
  CHUNKED
  ERROR
}

model Organization {
  id              String            @id @default(cuid())
  name            String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  documents       Document[]
  questionnaires  Questionnaire[]
  approvedAnswers ApprovedAnswer[]
}

model Document {
  id             String         @id @default(cuid())
  organizationId String
  organization   Organization   @relation(fields: [organizationId], references: [id])
  name           String
  originalName   String
  mimeType       String
  status         DocumentStatus @default(UPLOADED)
  errorMessage   String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  chunks         DocumentChunk[]
}

model DocumentChunk {
  id         String   @id @default(cuid())
  documentId String
  document   Document @relation(fields: [documentId], references: [id])
  chunkIndex Int
  content    String
  embedding  Unsupported("vector(1536)")?
  createdAt  DateTime @default(now())

  @@unique([documentId, chunkIndex])
}

model Questionnaire {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  name           String
  sourceFileName String?
  questionColumn String?
  sourceHeaders  Json?
  totalCount     Int          @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  questions      Question[]
}

model Question {
  id              String        @id @default(cuid())
  questionnaireId String
  questionnaire   Questionnaire @relation(fields: [questionnaireId], references: [id])
  rowIndex        Int
  sourceRow       Json
  text            String
  answer          String?
  citations       Json
  createdAt       DateTime      @default(now())
  approvedAnswers ApprovedAnswer[]

  @@unique([questionnaireId, rowIndex])
}

model ApprovedAnswer {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  /// TODO(mvp-followup): decouple approvals from strict questionId binding so approved answers can be reused across semantically equivalent questions with evidence checks.
  questionId     String
  question       Question     @relation(fields: [questionId], references: [id])
  answer         String
  createdAt      DateTime     @default(now())
}
